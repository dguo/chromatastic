{
    "manifest_version": 2,
    "name": "Chromatastic",
    "version": "0.2.0",
    "author": "Danny Guo",
    "homepage_url": "https://github.com/dguo/chromatastic",
    "applications": {
        "gecko": {
            "id": "@chromatastic",
            "strict_min_version": "63.0a1"
        }
    },
    "icons": {
        "16": "images/logo-16.png",
        "32": "images/logo-32.png",
        "48": "images/logo-48.png",
        "96": "images/logo-96.png",
        "128": "images/logo-128.png"
    },
    "permissions": ["storage", "theme"],
    "background": {
        "scripts": ["scripts/background.ts"]
    },
    "options_ui": {
        "browser_style": false,
        "open_in_tab": true,
        "page": "options.html"
    }
}
